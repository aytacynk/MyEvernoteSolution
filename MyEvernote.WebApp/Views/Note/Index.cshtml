@model IEnumerable<MyEvernote.Entities.Note>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Notlar</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
            <a href="/Note/Create" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus"></span> Create
            </a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Catergory.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDraft)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LikeCount)
                </th>>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Catergory.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDraft)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LikeCount)
                    </td>
                    <td width="150">
                        <button title="Comments" type="button" class="btn btn-success btn-xs" data-toggle="modal" data-target="#modal_comment" data-note-id="@item.Id">
                            <span class="glyphicon glyphicon-comment"></span>
                        </button>

                        @Bootstrap.LinkButton("/Note/Edit/" + item.Id, "warning", "btn-xs", "Edit", "edit", string.Empty)

                        @Bootstrap.LinkButton("/Note/Details/" + item.Id, "info", "btn-xs", "Details", "search", string.Empty)

                        @Bootstrap.LinkButton("/Note/Delete/" + item.Id, "danger", "btn-xs", "Delete", "trash", string.Empty)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

@Bootstrap.ModalPopUp(id: "modal_comment", title: "Yorumlar")

<script src="~/Scripts/comment.js"></script>