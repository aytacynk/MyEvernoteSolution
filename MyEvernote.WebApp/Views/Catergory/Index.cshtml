@using MyEvernote.WebApp
@model IEnumerable<MyEvernote.Entities.Catergory>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Kategoriler</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
            <a href="/Catergory/Create" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus"></span> Create
            </a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsername)
                    </td>
                    <td>
                        @Bootstrap.LinkButton("/Catergory/Edit/" + item.Id, "warning", "btn-xs", "Edit", "edit", string.Empty)

                        @Bootstrap.LinkButton("/Catergory/Details/" + item.Id, "info", "btn-xs", "Details", "search", string.Empty)

                        @Bootstrap.LinkButton("/Catergory/Delete/" + item.Id, "danger", "btn-xs", "Delete", "trash", string.Empty)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>