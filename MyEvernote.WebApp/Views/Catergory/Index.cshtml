@model IEnumerable<MyEvernote.Entities.Catergory>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Kategoriler</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
            <a href="/Catergory/Create" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus"></span> Create
            </a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsername)
                    </td>
                    <td>
                        <a href="/Catergory/Edit/@item.Id" class="btn btn-warning btn-xs" title="Edit">
                            <span class="glyphicon glyphicon-edit"></span> 
                        </a>
                        <a href="/Catergory/Details/@item.Id" class="btn btn-info btn-xs" title="Details">
                            <span class="glyphicon glyphicon-search"></span> 
                        </a>
                        <a href="/Catergory/Delete/@item.Id" class="btn btn-danger btn-xs" title="Delete">
                            <span class="glyphicon glyphicon-trash"></span> 
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>