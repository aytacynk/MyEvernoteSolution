@using MyEvernote.WebApp.ViewModels
@using MyEvernote.Entities.Messages
@model ErrorViewModel

@{
    ViewBag.Title = Model.Title;
}

<link href="~/Content/login-register.css" rel="stylesheet" />

<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center ">@Model.Header </h1>
            </div>
            <div class="main-content">
                <div class="text-danger">
                    <h2><span class="glyphicon glyphicon-remove"></span>&nbsp;&nbsp;&nbsp;&nbsp;@Model.Title</h2>
                    <hr />
                    <p class="text-justify">
                        @foreach (ErrorMessageObject msg in Model.Items)
                        {
                            @msg.Message<br>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

@{
    string js = string.Empty;

    if (Model.IsRedirecting == true)
    {
        js = "setTimeout(function () { window.location ='" + Model.RedirectingUrl + "'; }, " + Model.RedirectingTimeout + ");";
    }
}
<script>
    $(document).ready(function () {
        @Html.Raw(js);
    });
</script>



